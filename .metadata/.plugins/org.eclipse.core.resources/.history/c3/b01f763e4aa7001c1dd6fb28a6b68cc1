package gui;

import javax.swing.JOptionPane;

public class Main {

	public static void main(String[] args) {
		
		String name = JOptionPane.showInputDialog("Enter your name");
		JOptionPane.showMessageDialog(null,"Hello "+ name);
		
		//we are attempting to assign the string into an integer
		//While using integer we need to use wrapper class
		int age = Integer.parseInt(JOptionPane.showInputDialog("Enter your age"));
		JOptionPane.showMessageDialog(null,"You are "+ age + " years old");
		
		double height = Double.parseInt(JOptionPane.showInputDialog("Enter your height"));
		JOptionPane.showMessageDialog(null,"You are "+ height + " cm");
		

	}

}
