package myPackage;

public class MicrosoftSalary
{
	
	//i want to reuse pf and hra to all methods  // i want to enforce the methods sa and ta to check all the companies are using these methods
	public int PF(int basic)
	{
		return 12*basic/100;
	}
	
	public int HRA(int basic)
	{
		return 40*basic/100;
	}
	public int SA()  //special allowance
	{
		return 30000;
	}
	public int TA() //travel allowance
	{
		return 2500;
	}
	
}

